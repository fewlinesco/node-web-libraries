{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "noErrorTruncation": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
    },
    "skipLibCheck": true
  },
  "include": [".", "src", "tests"],
  "exclude": ["node_modules", "dist", "examples"]
}
