{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "noErrorTruncation": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "examples", "tests"]
}
